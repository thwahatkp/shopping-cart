        <div class="container mt-4">
            <div class="row">
                {{#each products}}
                <div class="col-md-3">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top"
                        style="margin: 20px;border:2px solid rgb(85, 230, 85); height:200px; width:150px;"
