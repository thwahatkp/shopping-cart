                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Product}}</h5>
                            <p class="card-text">{{this.Catagory}}</p>
                            <p class="card-text">{{this.Description}}</p>
                            <p class="card-text" style="font-size: 20px; font-weight:700;">â‚¹{{this.Price}}</p>
                            {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a> --}}
                            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
                
            </div>
        </div>

